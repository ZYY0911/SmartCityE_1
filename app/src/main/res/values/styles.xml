<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Bottom_Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="rating_bar">
        <item name="minHeight">20dp</item>
        <item name="maxHeight">20dp</item>
        <item name="minWidth">20dp</item>
        <item name="maxWidth">20dp</item>
        <item name="android:progressDrawable">@drawable/reting_bar</item>
    </style>
</resources>